<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="3dp"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:elevation="2dp"
        android:background="@color/white"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linsaldo100"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/databasepay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/NamaKonterTagihan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10sp"
                        android:text="Dompet Abata"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                       android:textAlignment="textEnd"
                        android:layout_weight="0.5"
                        android:textSize="12sp"
                        android:text="Tanggal jatuh Tempo"
                        android:textColor="@color/black" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/nominalTaggihan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10sp"
                        android:text="Rp. 10.000"
                        android:textColor="@color/black" />



                    <TextView
                        android:id="@+id/tanggalTagihanTempo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="10sp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="30 April 2021"
                        android:textColor="@color/green" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/statusTagihan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:padding="2sp"
                        android:layout_alignParentEnd="true"
                        android:textSize="13sp"
                        android:text="Status"
                        android:textColor="@color/white" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>